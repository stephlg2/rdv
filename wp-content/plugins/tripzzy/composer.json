{
	"name": "tripzzy/tripzzy",
	"description": "",
	"type": "wordpress-plugin",
	"license": "GPLv3",
	"require": {
		"php": ">=7.3",
		"rlanvin/php-rrule": "^2.4"
	},
	"config": {
		"platform": {
			"php": "7.3"
		},
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true,
			"kylekatarnls/update-helper": true
		}
	},
	"require-dev": {
		"squizlabs/php_codesniffer": "^3.5",
		"dealerdirect/phpcodesniffer-composer-installer": "^0.7.1",
		"phpcompatibility/phpcompatibility-wp": "^2.1",
		"wp-coding-standards/wpcs": "^2.1",
		"phpunit/phpunit": "^5",
		"wp-cli/wp-cli-bundle": "^2.4",
		"godaddy-wordpress/json2po": "^1.0",
		"godaddy-wordpress/pot2json": "^1.0"
	},
	"scripts": {
		"lint": "@php ./vendor/bin/phpcs",
		"test": "@php ./vendor/bin/phpunit"
	},
	"autoload": {
        "psr-4": {
            "Tripzzy\\Core\\":"inc/Core",
            "Tripzzy\\Admin\\":"inc/Admin"
        },
		"classmap": ["inc/Abstract"],
		"files": [
			"inc/Core/Functions/Core.php",
			"inc/Core/Functions/Conditionals.php",
			"inc/Core/Functions/Formatting.php",
			"inc/Core/Functions/TemplateMarkups.php"
		]
    }
}
